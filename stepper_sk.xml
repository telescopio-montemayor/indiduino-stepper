<INDIDriver>

<defSwitchVector device="Arduino Stepper" name="CONNECTION" label="Connection" group="Main Control" state="Idle" perm="rw" rule="OneOfMany" timeout="60">
    <defSwitch name="CONNECT" label="Connect">
Off
    </defSwitch>
    <defSwitch name="DISCONNECT" label="Disconnect">
On
    </defSwitch>
</defSwitchVector>

<defTextVector device="Arduino Stepper" name="DEVICE_PORT" label="SERIAL" group="Main Control" state="Idle" perm="rw" timeout="0">
    <defText name="PORT" label="Port">
/dev/ttyACM0
    </defText>
</defTextVector>

<defNumberVector device="Arduino Stepper" name="CONFIG" label="CONFIG" group="Main Control" state="Idle" perm="rw" timeout="0">
<defNumber name="SPEED" label="SPEED" format="%4.0f" min="0" max="4000" step="1">
    <indiduino pin="3" type="output" />
4000
</defNumber>
<defNumber name="ACCEL" label="ACCEL" format="%4.0f" min="0" max="1000" step="1">
    <indiduino pin="6" type="output" />
400
</defNumber>
<defNumber name="POSITION_MULTIPLIER" label="POSITION MULTIPLIER" format="%4.0f" min="1" max="16000" step="1">
    <indiduino pin="7" type="output" />
1
</defNumber>
</defNumberVector>

<defNumberVector device="Arduino Stepper" name="TRACKING" label="TRACKING" group="Main Control" state="Idle" perm="rw" timeout="0">
  <defNumber name="TRACKING_SPEED" label="TRACKING SPEED" format="%4.0f" min="0" max="4000" step="1">
    <indiduino pin="9" type="output" />
    400
  </defNumber>
</defNumberVector>

<defSwitchVector device="Arduino Stepper" name="TRACKING_ENABLE_GROUP" label="Tracking" group="Main Control" state="Idle" perm="rw" rule="OneOfMany" timeout="0">
  <defSwitch name="TRACKING_STOP" label="STOP TRACKING">
    On
  </defSwitch>
  <defSwitch name="TRACKING_START" label="START TRACKING">
    Off
    <indiduino pin="8" type="output" />
  </defSwitch>
</defSwitchVector>

<defNumberVector device="Arduino Stepper" name="TARGET_POSITION" label="POSITION" group="Main Control" state="Idle"  timeout="0" perm="rw">
<defNumber name="TARGET_POSITION_VALUE" label="TARGET" format="%4.0f" min="0" max="16000" step="1">
    <indiduino pin="5" type="output" />
8000
</defNumber>
</defNumberVector>
<defNumberVector device="Arduino Stepper" name="ACTUAL_POSITION" label="POSITION" group="Main Control" state="Idle"  timeout="0" perm="ro">
<defNumber name="ACTUAL_POSITION_VALUE" label="ACTUAL" format="%4.0f" min="0" max="16000" step="1" >
    <indiduino pin="14" type="input" />
8000
</defNumber>
</defNumberVector>
</INDIDriver>
